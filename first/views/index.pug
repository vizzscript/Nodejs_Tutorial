// File path: views/index.pug
// Pug template with advanced animations and beautiful design
html
  head
    // Set the title of the HTML page
    title Sai Compusys | Pug Example

    // Include Animate.css for animations
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css")

    // Include Font Awesome for icons
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")

    // Internal CSS styles for the page
    style.
      /* General body styling */
      body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: #fff;
        min-height: 100vh;
        overflow-x: hidden;
        position: relative;
      }

      /* Background illustration styling */
      body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://illustrations.popsy.co/amber/student-graduation.svg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: 40%;
        opacity: 0.1;
        z-index: -1;
        animation: float 6s ease-in-out infinite;
      }

      /* Floating animation for the background illustration */
      @keyframes float {
        0%, 100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-20px);
        }
      }

      /* Container for the content */
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
        text-align: center;
      }

      /* Main heading styling */
      h1 {
        font-size: 3em;
        margin-bottom: 20px;
        color: #fff;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        animation: fadeInDown 1s;
      }

      /* Subheading styling */
      h4 {
        font-size: 1.5em;
        margin-bottom: 30px;
        color: #e0e0e0;
        animation: fadeIn 1.5s;
      }

      /* Paragraph styling */
      p {
        font-size: 1.2em;
        color: #e0e0e0;
        animation: fadeIn 2s;
      }

      /* List styling */
      ul {
        list-style-type: none;
        padding: 0;
        margin: 0 auto;
        max-width: 600px;
      }

      /* List item styling with hover effect */
      li {
        background: rgba(255, 255, 255, 0.1);
        margin: 15px 0;
        padding: 20px;
        border-radius: 12px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        animation: fadeInUp 1s;
      }

      li:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
      }

      /* Icon styling */
      .fas {
        margin-right: 10px;
        color: #ffeb3b;
      }

      /* Button styling */
      .btn {
        display: inline-block;
        margin-top: 30px;
        padding: 12px 24px;
        font-size: 1em;
        color: #fff;
        background: #ff6f61;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.3s ease;
        animation: fadeIn 2.5s;
      }

      .btn:hover {
        background: #ff3b2f;
        transform: scale(1.05);
      }

      /* Footer styling */
      footer {
        margin-top: 50px;
        font-size: 0.9em;
        color: #e0e0e0;
        animation: fadeIn 3s;
      }

  body
    // Background illustration is added via CSS

    // Container for the content
    .container
      // Display the main heading of the page
      h1.animate__animated.animate__fadeInDown Sai Compusys | Pug Example
      
      // Display a subheading
      h4.animate__animated.animate__fadeIn This data is coming from Server:

      // Display data received from Express server
      p.animate__animated.animate__fadeIn The server sent the following data: #[strong #{message}]

      // Display the list of courses using the each loop
      ul
        each course in courses
          // Display each course as a list item with an icon
          li.animate__animated.animate__fadeInUp
            i.fas.fa-book
            | #{course}

      // Optional button for interaction
      button.btn.animate__animated.animate__fadeIn Explore More

      // Footer
      footer.animate__animated.animate__fadeIn &copy; 2023 Sai Compusys. All rights reserved.